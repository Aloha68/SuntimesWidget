<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout android:orientation="vertical"
                  android:layout_width="wrap_content" android:layout_height="wrap_content">

        <LinearLayout style="@style/SunsetTimeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView style="@style/SunsetTimeTextView"
                      android:id="@+id/text_time_noon_label"
                      android:text="@string/timeMode_noon" android:labelFor="@+id/text_time_noon"
                      android:minWidth="170dp" android:gravity="start" />

            <LinearLayout style="@style/SunsetTimeLayout"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content">

                <TextView style="@style/SunsetTimeTextView"
                          android:id="@+id/text_time_noon"
                          android:text="" tools:text="12:01" />

                <TextView
                    style="@style/SunsetTimeTextSuffixView"
                    android:id="@+id/text_time_rise_suffix"
                    android:layout_gravity="bottom"
                    android:layout_height="match_parent"
                    tools:text="AM" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</merge>