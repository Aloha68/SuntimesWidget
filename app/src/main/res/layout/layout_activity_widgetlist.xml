<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical" android:padding="@dimen/widgetActivity_padding">

    <TextView
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="@string/configLabel_widgetList"
        style="?android:attr/listSeparatorTextViewStyle" />

    <LinearLayout android:id="@+id/item1" android:layout_width="match_parent" android:layout_height="wrap_content">
        <include layout="@layout/layout_listitem_widgets" />
    </LinearLayout>

    <LinearLayout android:id="@+id/item2" android:layout_width="match_parent" android:layout_height="wrap_content">
        <include layout="@layout/layout_listitem_widgets" />
    </LinearLayout>

    <View android:layout_width="match_parent" style="@style/SunsetTimeHorizontalRule" />

    <ListView android:id="@+id/widgetList"
              android:layout_width="match_parent" android:layout_height="match_parent" />


</LinearLayout>