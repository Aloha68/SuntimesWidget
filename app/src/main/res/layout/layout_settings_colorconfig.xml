<merge xmlns:tools="http://schemas.android.com/tools"
       xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/settingsGroup_margin"
        android:paddingLeft="5dp" android:paddingRight="5dp">

        <TextView style="@style/SunsetTimeSettingsGroupTitle"
                  android:id="@+id/colorconfig_grouptitle"
                  android:layout_width="wrap_content" android:layout_height="wrap_content"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  android:text="Color Settings"
                  tools:layout_editor_absoluteX="5dp"/>

        <!-- scheme selector -->
        <LinearLayout
            android:id="@+id/layout_scheme"
            android:orientation="horizontal" android:gravity="center_vertical|start"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:paddingTop="@dimen/settingsGroup_padding"
            app:layout_constraintTop_toBottomOf="@+id/colorconfig_grouptitle"
            app:layout_constraintStart_toStartOf="parent">

            <ImageButton
                android:id="@+id/addButton" android:src="?attr/icActionNew"
                android:background="@null" android:padding="4dp"
                android:layout_marginStart="0dp" android:layout_marginLeft="0dp"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                android:layout_marginTop="4dp" android:layout_marginBottom="4dp"
                android:layout_width="wrap_content" android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/label_scheme"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Scheme:" />

            <ViewFlipper
                android:id="@+id/flip_scheme"
                android:layout_width="wrap_content" android:layout_height="wrap_content">

                <Spinner android:id="@+id/spin_scheme_name"
                         android:layout_width="wrap_content" android:layout_height="wrap_content"
                         android:layout_gravity="center_vertical" />

                <EditText
                    android:id="@+id/edit_scheme_name"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:hint="Name" />

            </ViewFlipper>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_buttons"
            app:layout_constraintStart_toEndOf="@+id/layout_scheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/layout_scheme"
            app:layout_constraintBottom_toBottomOf="@+id/layout_scheme"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:gravity="end|top">

            <ImageButton
                android:id="@+id/editButton" android:src="?attr/icActionEdit"
                android:background="@null" android:padding="4dp"
                android:layout_marginStart="4dp" android:layout_marginLeft="4dp"
                android:layout_marginEnd="4dp" android:layout_marginRight="4dp"
                android:layout_marginTop="4dp" android:layout_marginBottom="4dp"
                android:layout_width="wrap_content" android:layout_height="wrap_content" />

            <ImageButton
                android:id="@+id/deleteButton" android:src="?attr/icActionDelete"
                android:background="@null" android:padding="4dp"
                android:layout_marginTop="4dp" android:layout_marginBottom="4dp"
                android:layout_width="wrap_content" android:layout_height="wrap_content" />

        </LinearLayout>

        <!-- dark / light tabs -->
        <RadioGroup
            android:id="@+id/tabs"
            app:layout_constraintTop_toBottomOf="@+id/layout_buttons"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/tabDark"
                android:layout_width="0dp" android:layout_height="wrap_content"
                android:layout_weight="1" android:gravity="center"
                android:button="@null" android:background="@drawable/btn_tab"
                android:padding="4dp"
                android:checked="true"
                android:text="Dark" />

            <RadioButton
                android:id="@+id/tabLight"
                android:layout_width="0dp" android:layout_height="wrap_content"
                android:layout_weight="1" android:gravity="center"
                android:button="@null" android:background="@drawable/btn_tab"
                android:padding="4dp"
                android:text="Light " />

        </RadioGroup>

        <!-- Sunrise Color -->
        <LinearLayout
            android:id="@+id/layout_sunriseColor"
            android:orientation="horizontal" android:gravity="center_vertical"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tabs"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/editLabel_sunriseColor"
                style="@style/ColorEditLabel"
                android:nextFocusRight="@+id/editLabel_sunsetColor"
                android:nextFocusForward="@+id/editLabel_sunsetColor"
                android:nextFocusDown="@+id/editLabel_sunsetColor"
                android:text="@string/configLabel_themeColorSunrise" />

            <EditText
                android:id="@+id/edit_sunriseColor"
                style="@style/ColorEdit" android:visibility="gone"
                android:nextFocusRight="@+id/editLabel_sunsetColor"
                android:nextFocusForward="@+id/editLabel_sunsetColor"
                android:nextFocusDown="@+id/editLabel_sunsetColor"
                android:text="" android:hint="@string/configHint_themeColorSunrise" />

            <ImageButton
                android:id="@+id/editButton_sunriseColor"
                style="@style/ColorEditButton"
                android:contentDescription="@string/configLabel_themeColorSunrise" />

        </LinearLayout>

        <!-- Sunset Color -->
        <LinearLayout
            android:id="@+id/layout_sunsetColor"
            android:orientation="horizontal" android:gravity="center_vertical"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/layout_sunriseColor"
            app:layout_constraintStart_toStartOf="@+id/layout_sunriseColor">

            <TextView
                android:id="@+id/editLabel_sunsetColor"
                style="@style/ColorEditLabel"
                android:nextFocusUp="@+id/editLabel_sunriseColor"
                android:nextFocusLeft="@+id/editLabel_sunriseColor"
                android:text="@string/configLabel_themeColorSunset" />

            <EditText
                android:id="@+id/edit_sunsetColor"
                style="@style/ColorEdit" android:visibility="gone"
                android:nextFocusUp="@+id/editLabel_sunriseColor"
                android:nextFocusLeft="@+id/editLabel_sunriseColor"
                android:text="" android:hint="@string/configHint_themeColorSunset" />

            <ImageButton
                android:id="@+id/editButton_sunsetColor"
                style="@style/ColorEditButton"
                android:contentDescription="@string/configLabel_themeColorSunset" />

        </LinearLayout>

        <!-- Previews -->
        <TextView
            android:id="@+id/preview_sunrise_text"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/layout_sunriseColor"
            app:layout_constraintTop_toTopOf="@id/layout_sunriseColor"
            app:layout_constraintBottom_toBottomOf="@id/layout_sunriseColor"
            android:layout_margin="8dp"
            android:text="7:00" />

        <TextView
            android:id="@+id/preview_sunset_text"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/layout_sunsetColor"
            app:layout_constraintTop_toTopOf="@id/layout_sunsetColor"
            app:layout_constraintBottom_toBottomOf="@id/layout_sunsetColor"
            android:layout_margin="8dp"
            android:text="6:00" />

    </android.support.constraint.ConstraintLayout>
</merge>